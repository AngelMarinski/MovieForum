@using MovieForum.Services.DTOModels

@model IEnumerable<UserDTO>

@if (this.Model.Count() > 0)
{
    <table class="table table-hover">
        <thead>
            <tr class="table-primary">
                <th scope="col">Username</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email</th>
                <th scope="col">ImagePath</th>
            </tr>
        </thead>
        @{
            foreach (var user in this.Model)
            {
                <tbody>
                    <tr class="table-secondary">
                        <td scope="row"><a asp-controller="User" asp-action="Index" asp-route-email="@user.Email" class="dropdown-item">@user.Username</a>td>
                        <td scope="row">@user.FirstName</td>
                        <td scope="row">@user.LastName</td>
                        <td scope="row">@user.Email</td>
                        <td scope="row">@user.ImagePath</td>
                    </tr>
                </tbody>
            }
        }
    </table>
}
else{
    <h1>No users found!</h1>
}