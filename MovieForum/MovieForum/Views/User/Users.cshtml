@using MovieForum.Services.DTOModels

@model IEnumerable<UserDTO>
<html>
<head>
    <link href="/css/users.css" rel="stylesheet">
</head>
<body>
    <!-- search form -->
    <form asp-controller="User" asp-action="Search" class="d-flex align-items-center w-50 form-search">
        <div>
            <select class="form-search" name="type">
                <option value="1">Username</option>
                <option value="2">Email</option>
                <option value="3">First Name</option>
            </select>
        </div>
        <div class="input-group">
            <input name="userSearch" type="search" class="form-control" placeholder="Search" aria-label="Search" />
        </div>
        <input type="submit" class="btn btn-dark" />
    </form>

    <div class="align-items-center container containerUsers"  >
        <div>
            <div class="col-md-8">
                <div class="people-nearby">
                    @if (this.Model.Count() > 0)
                    {
                        @foreach (var user in this.Model)
                        {
                            <div class="nearby-user">
                                <div class="row">
                                    <div class="col-md-2 col-sm-2">
                                        <img src="~/Images/@user.ImagePath" alt="user" class="profile-photo-lg">
                                    </div>
                                    <div class="col-md-7 col-sm-7">
                                        <h5><a asp-controller="User" asp-action="Index" asp-route-email="@user.Email">@user.FirstName @user.LastName</a></h5>
                                        <p>@user.Username</p>
                                        <p class="text-muted">@user.Email</p>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                      <h3>No user found!</h3>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>