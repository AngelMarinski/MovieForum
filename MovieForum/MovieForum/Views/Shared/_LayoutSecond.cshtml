<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/nice-select.css" />
</head>
<body>
    <header class="header">

        <div class="container">
            <div class="row">
                <div class="col-lg-2">
                    <div class="header__logo">
                        <a href="./index.html">
                        </a>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="header__nav">
                        <nav class="header__menu mobile-menu">
                            <ul>
                                <li class="active"><a asp-controller="Home" asp-action="Index">Homepage</a></li>
                                <li>
                                    <a asp-controller="Movies">Movies</a>
                                </li>

                                <li><a href="#">Contacts</a></li>
                                @if (!this.User.Identity.IsAuthenticated)
                                {
                                    <li><a asp-controller="Auth" asp-action="Login">Sign In</a></li>
                                    <li><a asp-controller="Auth" asp-action="Register">Sign Up</a></li>
                                }
                                <li> <a class="search-switch"><span class="icon_search"></span></a></li>
                                @if (this.User.Identity.IsAuthenticated)
                                {

                                    <li class="header__right">
                                        <span class="icon_profile arrow_carrot-down"></span>
                                        <ul class="dropdown">
                                            <li><a asp-controller="User" asp-action="Index" asp-route-email="@User.Identity.Name">Profile</a></li>

                                            <li><a asp-controller="User" asp-action="Update">Settings</a></li>
                                            <li><a asp-controller="Auth" asp-action="Logout">Sign Out</a></li>
                                        </ul>
                                    </li>
                                }
                            </ul>

                        </nav>
                    </div>
                </div>

            </div>
            <div id="mobile-menu-wrap"></div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
        <div class="container">
        &copy; 2022 - WebApplication1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
        </footer>*@

    <!-- Search model Begin -->
    <div class="search-model">
        <div class="h-100 d-flex align-items-center justify-content-center">
            <div class="search-close-switch"><i class="icon_close"></i></div>
            <form asp-controller="User" asp-action="Search" class="search-model-form">
                <input name="userSearch" id="search-input" placeholder="Search here.....">
            </form>
        </div>
    </div>
    <!-- Search model end -->
    <!-- Footer Section Begin -->
    <footer class="footer" style=" position: fixed; bottom: 0; width: 100%;">
        <div class="page-up">
            <a href="#" id="scrollToTopButton"><span class="arrow_carrot-up"></span></a>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="footer__logo">
                        <a href="./index.html"></a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="footer__nav">
                        <ul>
                            <li class="active"><a asp-controller="Home" asp-action="Index">Homepage</a></li>
                            <li><a asp-controller="Movies">Movies</a></li>
                            <li><a asp-controller="Home" asp-action="Contacts">Contacts</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Section End -->
    <!-- Js Plugins -->
    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/player.js"></script>
    <script src="js/jquery.nice-select.min.js"></script>
    <script src="js/mixitup.min.js"></script>
    <script src="js/jquery.slicknav.js"></script>
    <script src="js/owl.carousel.min.js"></script>
    <script src="js/main.js"></script>
    @*@await RenderSectionAsync("Login", required: false)*@
</body>
</html>