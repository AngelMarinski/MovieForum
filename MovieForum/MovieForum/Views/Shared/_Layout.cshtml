<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <h4>Movie forum</h4>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">                        
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                </ul>
                <ul class="navbar-nav ">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Movies" asp-action="Index">Movies</a>
                    </li>
                </ul>
                <form class="d-flex align-items-center w-50 form-search" style="margin:auto">
                    <div class="input-group">
                        <button class="btn btn-light dropdown-toggle shadow-0" type="button" data-bs-toggle="dropdown"
                                aria-expanded="false" style="padding-bottom: 0.4rem;">
                            All
                        </button>
                        <ul class="dropdown-menu dropdown-menu-dark fa-ul">
                            <li>
                                <a class="dropdown-item" href="#"><span class="fa-li pe-2"><i class="fas fa-search"></i></span>All</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/movies">
                                    <span class="fa-li pe-2">
                                        <i class="fas fa-film"></i>
                                    </span>Titles
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">
                                    <span class="fa-li pe-2"><i class="fas fa-tv"></i></span>Users
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">
                                    <span class="fa-li pe-2">
                                        <i class="fas fa-user-friends"></i>
                                    </span>Celebs
                                </a>
                            </li>
                        </ul>
                        <input type="search" class="form-control" placeholder="Search" aria-label="Search" />
                    </div>
                    <a href="#!" class="text-white"><i class="fas fa-search ps-3"></i></a>
                </form>
                <ul class="navbar-nav ml-auto mb-2 mb-lg-0">

                    @if (!this.User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Auth" asp-action="Login">Sign In</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Auth" asp-action="Register">Sign Up</a>
                        </li>
                    }
                </ul>

                @if (this.User.Identity.IsAuthenticated)
                {
                    <ul class="navbar-nav d-flex flex-row ms-auto me-3">
                        <li class="nav-item me-3 me-lg-0 dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown1" role="button" data-bs-toggle="dropdown"
                           aria-expanded="false">
                                <img src="~/Images/@this.User.Claims.FirstOrDefault(x=>x.Type == "Image").Value" class="rounded-circle" height="22"
                                 alt="" loading="lazy" />
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown1">
                                <li><a asp-controller="User" asp-action="Index" class="dropdown-item">Profile</a></li>
                                <li><a asp-controller="User" asp-action="Update" class="dropdown-item">Settings</a></li>
                                <li>
                                    <hr class="dropdown-divider" />
                                </li>
                                <li>
                                    <a asp-controller="Auth" asp-action="Logout" class="dropdown-item">Sign Out</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                }
            </div>
        </nav>
    </header>




    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
        <div class="container">
        &copy; 2022 - WebApplication1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
        </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @*@await RenderSectionAsync("Login", required: false)*@
</body>
</html>

<style>
    .navbar-nav {
        margin-left: auto;
    }


    .navbar-dark .nav-item .nav-link {
        color: #fff;
    }

        .navbar-dark .nav-item .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
            border-radius: 0.25rem;
            color: #fff;
        }

    .fa-li {
        position: relative;
        left: 0;
    }
</style>